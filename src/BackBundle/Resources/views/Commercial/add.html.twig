{% extends "BackBundle::layout.html.twig" %}{#Include CSS#}  {% block stylesheets %}      {{ parent() }}      {% stylesheets      'bundles/back/theme/assets/global/plugins/select2/css/select2.min.css'      'bundles/back/theme/assets/global/plugins/select2/css/select2-bootstrap.min.css'      'bundles/back/theme/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css'      'bundles/back/css/style.css'      filter='cssrewrite' %}      <link rel="stylesheet" href="{{ asset_url }}"/>      {% endstylesheets %}      <style type="text/css">      </style>  {% endblock stylesheets %}    {% block title %}    Ajout commercial | {{ parent() }}{% endblock %}    {% block header_breadcrumb %}        <li>            <span>Ajout</span>        </li>    {% endblock header_breadcrumb %}{% block action_toolbar %}    <div class="btn-group pull-right">        <button type="button" class="btn green btn-sm btn-outline dropdown-toggle"                data-toggle="dropdown"> Actions            <i class="fa fa-angle-down"></i>        </button>        <ul class="dropdown-menu pull-right" role="menu">            <li>                <a href="{{ path('back_commercial_list') }}">                    <i class="icon-list"></i> Liste des commerciaux</a>            </li>            <li>                <a href="{{ path('back_commercial_add') }}">                    <i class="icon-shield"></i> Ajout un commercial</a>            </li>            <li class="divider"></li>            <li>                <a href="#">                    <i class="icon-bag"></i> Autres</a>            </li>        </ul>    </div>{% endblock action_toolbar %}    {#{% block page_title %}Clients{% endblock page_title %}#}    {#{% block page_sub_title %}#}        {#<small>Liste</small>{% endblock page_sub_title %}#}{% block back_body %}    <div class="row" id="">        <div class="col-md-12 col-sm-12 margin-top-20">            <!-- BEGIN Portlet PORTLET-->            <div class="portlet">                <div class="portlet-title">                    <div class="caption font-green-sharp">                        <i class="icon-user font-green-sharp"></i>                        <span class="caption-subject bold uppercase"> Client</span>                        <span class="caption-helper"> Ajout</span>                    </div>                    <div class="actions">                        <a href="{{ path('back_commercial_list') }}" title="Ajouter un customer"                           class="btn btn-sm btn-block green btn-outline"><span class="fa fa-lsit"></span> Liste de                            clients</a>                    </div>                </div>                <div class="portlet-body">                    {% include('BackBundle:Includes:alert.html.twig') %}                    {{ form_start(form, {'attr': {'class':'horizontal-form', 'id': 'form_validation','autocomplete':'off'}}) }}                    <div class="row">                        <div class="col-sm-12">                            <div class="alert alert-danger display-hide">                                <button class="close" data-close="alert"></button>                                <span class="message-error">Veuillez corriger les champs invalides.</span>                            </div>                        </div>                    </div>                    <div class="row">                        <div class="col-lg-9 col-md-9">                            <div class="row">                                {% if form.lastName is defined %}                                    <div class="col-sm-6">                                        <div class="form-group">                                            {{ form_label(form.lastName) }}                                            <div class="input-group">                                                            <span class="input-group-addon">                                                            <i class="fa fa-user-plus"></i>                                                            </span>                                                {{ form_widget(form.lastName) }}                                            </div>                                        </div>                                    </div>                                {% endif %}                                {% if form.firstName is defined %}                                    <div class="col-sm-6">                                        <div class="form-group">                                            {{ form_label(form.firstName) }}                                            <div class="input-group">                                                            <span class="input-group-addon">                                                            <i class="fa fa-user"></i>                                                            </span>                                                {{ form_widget(form.firstName) }}                                            </div>                                        </div>                                    </div>                                {% endif %}                            </div>                                                        <div class="row">                                {% if form.phone is defined %}                                    <div class="col-sm-6">                                        <div class="form-group">                                            {{ form_label(form.phone) }}                                            <div class="input-group">                                                            <span class="input-group-addon">                                                            <i class="fa fa-phone"></i>                                                            </span>                                                {{ form_widget(form.phone) }}                                            </div>                                        </div>                                    </div>                                {% endif %}                            </div>                            <div class="row">                                <div class="col-sm-12">                                    <h5 class="title-header bg-white">Pour la session</h5>                                </div>                                {% if form.login is defined %}                                    <div class="col-sm-6">                                        <div class="form-group">                                            <div class="row">                                                <div class="col-sm-6">                                                    {{ form_label(form.login) }}                                                </div>                                                <div class="col-sm-6 text-right">                                                    <small class="login-valid font-red hide">Existe Déjà</small>                                                </div>                                                <div class="col-sm-12">                                                    <div class="input-group">                                                            <span class="input-group-addon">                                                            <i class="fa fa-user-secret"></i>                                                            </span>                                                        {{ form_widget(form.login) }}                                                    </div>                                                </div>                                            </div>                                        </div>                                    </div>                                {% endif %}                                {% if form.email is defined %}                                    <div class="col-sm-6">                                        <div class="form-group">                                            <div class="row">                                                <div class="col-sm-6">                                                    {{ form_label(form.email) }}                                                </div>                                                <div class="col-sm-6 text-right">                                                    <small class="email-valid font-red hide">Éxiste Déjà</small>                                                </div>                                                <div class="col-sm-12">                                                    <div class="input-group">                                                            <span class="input-group-addon">                                                            <i class="fa fa-envelope"></i>                                                            </span>                                                        {{ form_widget(form.email) }}                                                    </div>                                                </div>                                            </div>                                        </div>                                    </div>                                {% endif %}                            </div>                            <div class="row">                                {% if form.password is defined %}                                    <div class="col-sm-6">                                        <div class="row">                                            <div class="form-group">                                                <div class="col-sm-6">                                                    {{ form_label(form.password) }}                                                </div>                                                <div class="col-sm-6 text-right">                                                    <a href="javascript:;" id="btn_show_pwd" class="font-blue">                                                        <small><i class="fa fa-eye"></i></small>                                                    </a>                                                </div>                                                <div class="col-sm-12">                                                    <div class="input-group">                                                            <span class="input-group-addon">                                                            <i class="fa fa-key"></i>                                                            </span>                                                        {{ form_widget(form.password) }}                                                    </div>                                                </div>                                            </div>                                        </div>                                    </div>                                    <div class="col-sm-6">                                        <div class="form-group">                                            <label class="control-label required" for="passwordConfirmation">Confirmation                                                Mot de passe</label>                                            <div class="input-group">                                                            <span class="input-group-addon">                                                            <i class="fa fa-key"></i>                                                            </span>                                                <input required type="password" class="form-control input_confirmation"                                                       placeholder="********" id="passwordConfirmation">                                            </div>                                        </div>                                    </div>                                {% endif %}                                                        </div>                        </div>                        <div class="col-lg-3 col-md-3">                            <div class="row">                                {% if form.image_upload is defined %}                                    <div class="col-lg-12 col-md-12 text-center">                                        <div class="form-group" style="display: none;">                                            {{ form_label(form.image_upload) }}                                        </div>                                        <div class="fileinput fileinput-new " data-provides="fileinput">                                            <div class=" fileinput-new thumbnail">                                                <img id="img_preview_background"                                                     src="{{ asset('assets/img/no_image_portrait.png') }}"                                                     alt="" class="image-responsive"/></div>                                            <div class="fileinput-preview fileinput-exists thumbnail"></div>                                            <div>                                        <span class="btn default btn-file">                                            <span class="fileinput-new"> Selectionner une image </span>                                            <span class="fileinput-exists"> Changer l'image</span>                                            {{ form_widget(form.image_upload) }}</span>                                                <a href="javascript:;" class="btn red fileinput-exists"                                                   data-dismiss="fileinput"> Supprimer </a>                                            </div>                                        </div>                                    </div>                                {% endif %}                            </div>                        </div>                        <div class="col-sm-12">                            <hr>                        </div>                        <div class="col-sm-3">                            <button type="submit" class="btn green btn-sm btn-block"><span class="fa fa-save"></span>                                Enregistrer                            </button>                        </div>                    </div>                    {{ form_end(form) }}                </div>            </div>        </div>    </div>{% endblock back_body %}{% block javascripts %}    {{ parent() }}    {% javascripts    'bundles/back/theme/assets/global/plugins/jquery-validation/js/jquery.validate.min.js'    'bundles/back/theme/assets/global/plugins/jquery-validation/js/additional-methods.min.js'    'bundles/back/theme/assets/global/plugins/select2/js/select2.full.min.js'    "bundles/back/theme/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js"    "bundles/back/js/plugins/validator.messages.js"    "bundles/back/js/commercial/add.js" %}    <script src="{{ asset_url }}"></script>    {% endjavascripts %}{% endblock %}