{% extends "::base.html.twig" %}  {% block stylesheets %}      {{ parent() }}      {% stylesheets      'https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css'      'bundles/back/css/login.css'      filter='cssrewrite' %}      <link rel="stylesheet" href="{{ asset_url }}"/>      {% endstylesheets %}  {% endblock %}    {% block title %}    Connexion | {{ parent() }}{% endblock %}{% block body %}    <div class="container">        <div class="row" id="login">            <div class="col-md-5 col-md-offset-3 text-center">                <img class="logo-42" src="{{ asset("assets/img/logo/42_alternative.png") }}" alt="logo"/>            </div>            <form class="" role="form"                  action="{{ path("login") }}" method="post">                <div class="col-md-5 col-md-offset-3" style="margin-bottom: 15px; margin-top: 2px;">                    <div class="alert alert-danger hide text-center" id="field-message-error" role="alert"                         style="margin-bottom:25px;">                        {#<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>#}                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>                        <span class="sr-only">Error:</span>                        <span class="message-error"></span>                    </div>                                        {% if error %}                        <div class="alert alert-danger">                            <button class="close" data-close="alert"></button>                            <span> {{ error  }}.</span>                        </div>                    {% endif %}                                        <div class="form-group has-feedback" id="field-login">                        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->                        {#<label class="control-label visible-ie8 visible-ie9">{{ 'security.login.username'|trans }}</label>#}                        <div class="input-field">                            <input class="form-control validate login placeholder-no-fix" type="email"                                    name="username" id="username"                                   value="{{ last_username }}"/>                            <label for="username"><i class="fa fa-envelope fa-fw"></i> Email</label>                        </div>                        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>                    </div>                    <div class="form-group has-feedback" id="field-password">                        {#<label class="control-label visible-ie8 visible-ie9">{{ 'security.login.password'|trans }}</label>#}                        <div class="input-field">                            <input class="form-control validate password placeholder-no-fix" type="password" autocomplete="off"                                   id="password"                                    name="password"/>                            <label for="password"><i class="fa fa-key fa-fw"></i> Mot de                                passe</label>                        </div>                    </div>                                        {#                       If you want to control the URL the user                       is redirected to on success (more details below)                       <input type="hidden" name="_target_path" value="/account" />                   #}                                        <div class="checkbox">                        <label>                            {#<input name="remember" type="checkbox" value="Remember Me">Se souvenir de moi.#}                        </label>                    </div>                                        <!-- Change this to a button or input when using this as a form -->                    <button id="btn-connexion" type="submit"                            class="btn btn-sm btn-danger btn-block waves-effect waves-light deep-orange darken-2">                        <span class="glyphicon glyphicon-off"></span> Connexion                    </button>                    {#</fieldset>#}                </div>            </form>                    </div>    </div>{% endblock body %}{% block javascripts %}    {{ parent() }}    {% javascripts    'https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js'    'bundles/back/js/ad/login.js' %}    {#<!-- END CORE PLUGINS -->#}    <script src="{{ asset_url }}" type="text/javascript"></script>    {% endjavascripts %}    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>{% endblock %}